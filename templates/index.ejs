<apex:page
  showHeader="<%= htmlWebpackPlugin.options.showHeader %>"
  sidebar="<%= htmlWebpackPlugin.options.sidebar %>"
  standardStylesheets="<%= htmlWebpackPlugin.options.standardStylesheets %>"
  applyHtmlTag="<%= htmlWebpackPlugin.options.applyHtmlTag %>"
  applyBodyTag="<%= htmlWebpackPlugin.options.applyBodyTag %>">

  <head>
    <% for (var css in htmlWebpackPlugin.files.css) { %>
      <apex:stylesheet value="{! URLFOR($Resource.<% htmlWebpackPlugin.options.staticResourceName %>, '/<%= htmlWebpackPlugin.files.css[css] %>') }" />
    <% } %>
  </head>

  <body>
    <% if (htmlWebpackPlugin.options.appMountIds && htmlWebpackPlugin.options.appMountIds.length > 0) { %>
      <% for (var index in htmlWebpackPlugin.options.appMountIds) { %>
        <div id="<%= htmlWebpackPlugin.options.appMountIds[index]%>"></div>
      <% } %>
    <% } %>

    <% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
      <script src="{! URLFOR($Resource.<% htmlWebpackPlugin.options.staticResourceName %>, '/<%= htmlWebpackPlugin.files.chunks[chunk].entry %>') }"></script>
    <% } %>

  </body>

</apex:page>
